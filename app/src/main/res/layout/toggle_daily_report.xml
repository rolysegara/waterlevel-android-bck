<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toggle_report"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_toggle_report"
    android:orientation="horizontal">

    <Button
        android:id="@+id/bt_before_noon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_button_report_am_pm"
        android:text="00:00 - 11:59"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_after_noon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="12:00 - 23:59"
        android:textColor="#DCDCDC" />

</LinearLayout>
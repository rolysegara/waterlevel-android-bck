<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bg_gradient_radial_blue" />

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/search_field_white"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/profile_width"
                        android:layout_height="@dimen/profile_height"
                        android:background="@drawable/bg_circle_light_blue"
                        android:padding="3dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        app:srcCompat="@android:drawable/sym_def_app_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#535455"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txt_change_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="#2D69AF"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/shadow_1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@+id/ll_profile"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_shadow_grey_rounded" />

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nsv_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/shadow_1"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/info"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/search_field_white"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="24dp"
                            android:paddingBottom="24dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_email"
                                        android:scaleType="fitCenter"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#555555"
                                        android:textSize="12dp"
                                        android:text="@string/email_address"
                                        android:layout_marginLeft="8dp"/>

                                    <TextView
                                        android:id="@+id/tv_email_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#4c4c4c"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:text="@string/email_address"
                                        android:gravity="right"
                                        android:layout_marginLeft="8dp"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:background="#EEEEEE"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_phone"
                                        android:scaleType="fitCenter"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#555555"
                                        android:textSize="12dp"
                                        android:text="@string/phone_number"
                                        android:layout_marginLeft="8dp"/>

                                    <TextView
                                        android:id="@+id/tv_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#4c4c4c"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:text="@string/phone_number"
                                        android:gravity="right"
                                        android:layout_marginLeft="8dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_below="@+id/ll_search"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_shadow_grey_rounded" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/chabge_password"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/search_field_white"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="24dp"
                            android:paddingBottom="24dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_padlock"
                                    android:scaleType="fitCenter"/>

                                <TextView
                                    android:id="@+id/tv_current_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#555555"
                                    android:textSize="12dp"
                                    android:text="@string/current_password"
                                    android:layout_marginLeft="8dp"/>

                                <EditText
                                    android:id="@+id/ed_current_password"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#4c4c4c"
                                    android:textSize="12dp"
                                    android:textStyle="bold|italic"
                                    android:hint="@string/current_password"
                                    android:inputType="textPassword"
                                    android:gravity="right"
                                    android:background="#ffffff"
                                    android:layout_marginLeft="8dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_eye_password"
                                    android:scaleType="fitCenter"
                                    android:layout_marginLeft="8dp"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="#EEEEEE"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_padlock"
                                    android:scaleType="fitCenter"/>

                                <TextView
                                    android:id="@+id/tv_new_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ececec"
                                    android:textSize="12dp"
                                    android:text="@string/new_password"
                                    android:layout_marginLeft="8dp"/>

                                <EditText
                                    android:id="@+id/ed_new_password"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#4c4c4c"
                                    android:textSize="12dp"
                                    android:textStyle="bold|italic"
                                    android:hint="@string/new_password"
                                    android:textColorHint="#ececec"
                                    android:inputType="textPassword"
                                    android:gravity="right"
                                    android:layout_marginLeft="8dp"
                                    android:background="#ffffff"
                                    android:enabled="false"/>

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_eye_password"
                                    android:scaleType="fitCenter"
                                    android:layout_marginLeft="8dp"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="#EEEEEE"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_padlock"
                                    android:scaleType="fitCenter"/>

                                <TextView
                                    android:id="@+id/tv_retype_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ececec"
                                    android:textSize="12dp"
                                    android:text="@string/retype_password"
                                    android:layout_marginLeft="8dp"/>

                                <EditText
                                    android:id="@+id/ed_retype_password"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#4c4c4c"
                                    android:textSize="12dp"
                                    android:textStyle="bold|italic"
                                    android:hint="@string/retype_password"
                                    android:textColorHint="#ececec"
                                    android:inputType="textPassword"
                                    android:gravity="right"
                                    android:layout_marginLeft="8dp"
                                    android:background="#ffffff"
                                    android:enabled="false"/>

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_eye_password"
                                    android:scaleType="fitCenter"
                                    android:layout_marginLeft="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_below="@+id/ll_search"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_shadow_grey_rounded" />

                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

    </android.support.design.widget.CoordinatorLayout>

</android.support.design.widget.CoordinatorLayout>